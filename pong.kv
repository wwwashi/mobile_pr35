<PongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
        Color:
            rgba: (1, 1, 1, 1)  # белый цвет мяча

<PongPaddle>:
    size: 25, 200
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<PongGame>:
    ball: pong_ball
    player1: player_left
    player2: player_right

    canvas:
        Color:
            rgba: (0.5, 0.5, 0.5, 1)  # серый фон
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height

    Label:
        font_size: 100
        font_name: 'Arial'
        color: (1, 0, 0, 1)  # красный текст
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)

    Label:
        font_size: 100
        font_name: 'Arial'
        color: (0, 1, 0, 1)  # зеленый текст
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)

    PongBall:
        center: self.parent.center
        size: 50, 50
        canvas:
            Color:
                rgba: (0, 255, 0, 1)  # белый цвет мяча
            Ellipse:
                pos: self.pos
                size: self.size
        id: pong_ball

    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y

    PongPaddle:
        id: player_right
        x: root.width - self.width
        center_y: root.center_y